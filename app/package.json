{
  "name": "@reflex/app",
  "productName": "Reflex",
  "description": "Make responsive websites without the guesswork.",
  "version": "0.7.0-beta.32",
  "author": "Nick Wittwer",
  "main": "./dist/main/index.js",
  "homepage": "https://reflexapp.nickwittwer.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/reflex-app/reflex.git"
  },
  "scripts": {
    "dev": "concurrently -k \"yarn serve:preload \" \"yarn serve:nuxt\" \"yarn electron:watch\"",
    "build": "yarn preload:build && yarn build:nuxt",
    "build:fast": "yarn run preload:build && npx cross-env LOCAL_BUILD=true yarn build:nuxt",
    "build:app": "npx cross-env RELEASE=true yarn build && cd src/main && yarn electron:build && yarn electron:builder",
    "serve:nuxt": "cd src/renderer && yarn dev",
    "build:nuxt": "cd src/renderer && yarn build",
    "electron:watch": "cd src/main && yarn watch",
    "electron:build": "cd src/main && yarn build",
    "preload:serve": "cd src/extraResources && yarn dev",
    "preload:build": "cd src/extraResources && yarn run build",
    "release": "npx @digitak/esrun --tsconfig=./scripts/tsconfig.json ./scripts/updater-cli.ts",
    "test": "jest",
    "lint": "eslint --ext .js,.vue,.ts -f eslint-friendly-formatter ./src",
    "lint:fix": "yarn run lint -- --fix",
    "postinstall": "yarn preload:build --mode development",
    "storybook": "start-storybook",
    "debug:playwright": "npx cross-env DEBUG=pw:browser* yarn run dev",
    "debug:build:mac": "./build/mac/Reflex.app/Contents/MacOS/Reflex --args --remote-debugging-port=8315 & open -a \"Google Chrome\" http://localhost:8315",
    "debug:build:m1": "./build/mac-arm64/Reflex.app/Contents/MacOS/Reflex --args --remote-debugging-port=8315 & open -a \"Google Chrome\" http://localhost:8315",
    "screenshot": "yarn run dev & npx wait-on tcp:9080 && node ./scripts/app-screenshots.js"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/renderer/$1",
      "^~/(.*)$": "<rootDir>/src/renderer/$1"
    }
  },
  "dependencies": {
    "@electron/remote": "2.0.9",
    "electron": "18.3.15"
  },
  "devDependencies": {
    "@babel/runtime-corejs2": "^7.14.8",
    "@esbuild-kit/esm-loader": "^2.5.5",
    "@reflex/ui": "^1.0.0",
    "@types/inquirer": "^9.0.3",
    "@vue/reactivity": "^3.2.47",
    "browser-env": "3.3.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.0",
    "execa": "^7.0.0",
    "inquirer": "^9.1.4",
    "jest": "27.0.6",
    "jest-vue-preprocessor": "^1.7.1",
    "typescript": "^4.9.3",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.9.8"
  },
  "stableVersion": "0.7.0-beta.31"
}
