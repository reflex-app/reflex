{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "noImplicitAny": false,
    "noEmitOnError": true
  },
  "include": [
    "**/*.js",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}